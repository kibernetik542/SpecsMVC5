
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home", new {area = ""})">
                    <span class="fa fa-2x fa-home text-success"></span>
                    &nbsp;Home
                </a>
            </div>
            <div class="navbar-collapse collapse pull-right">
                <ul class="nav navbar-nav">
                    <li>
                        <a class="btn btn-link btn-sm" href="@Url.Action("Index", "Product")">
                            <i class="fa fa-2x fa-product-hunt text-warning"></i>
                            &nbsp;Product
                        </a>
                    </li>
                    <li>
                        <a class="btn btn-link btn-sm" href="@Url.Action("Index", "User")">
                            <i class="fa fa-2x fa-users text-info"></i>
                            &nbsp;User
                        </a>
                    </li>
                    <li>
                        <a class="btn btn-link btn-sm" href="@Url.Action("Index", "Role")">
                            <i class="fa fa-2x fa-unlock-alt text-danger"></i>
                            &nbsp;Roles
                        </a>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Welcome  <b class="text-info">@System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(User.Identity.Name)</b>                        
                            @*Welcome <span class="text-info"><b>@User.Identity.Name</b></span>*@
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="btn btn-link btn-sm" href="@Url.Action("Logout", "Member")">
                                    <i class="fa fa-2x fa-sign-out text-danger"></i>
                                    &nbsp;Logout
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year </p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-2.2.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootbox.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>